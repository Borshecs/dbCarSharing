<%-include('include/_header')%>

    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/works"><i class="fas fa-angle-double-left"></i> All Deals</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Deals</h2>
                <span class="text-light">Use the below to update an Deals</span>
            </div>

            <form method="POST" id="update_work">
                <div class="new-work">
                    <div class="form-group">
                        <label for="DateOfisuue">DateOfissue</label>
                        <input type="hidden" name="id" value="<%=works._id%>">
                        <input type="datetime-local" name="DateOfisuue" value="<%=works.DateOfisuue%>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="ReturnDate">ReturnDate</label>
                        <input type="datetime-local" name="ReturnDate" value="<%=works.ReturnDate%>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="CarCondition">CarCondition</label>
                        <input type="text" name="CarCondition" value="<%=works.CarCondition%>" placeholder="0">
                    </div>
            
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>
        </div>
    </main>

<%-include('include/_footer')%>