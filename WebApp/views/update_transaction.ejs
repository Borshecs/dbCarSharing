<%-include('include/_header')%>

    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/transactions"><i class="fas fa-angle-double-left"></i> All Cars</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Cars</h2>
                <span class="text-light">Use the below to update an cars</span>
            </div>

            <form method="POST" id="update_transaction">
                <div class="new-transaction">
                    <div class="form-group">
                        <label for="Yearofissue">Yearofissue</label>
                        <input type="hidden" name="id" value="<%=transactions._id%>">
                        <input type="datetime-local" name="Yearofissue" value="<%=transactions.Yearofissue%>" placeholder="$$$">
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input type="text" name="Price" value="<%=transactions.Price%>" placeholder="0">
                    </div>
                    <div class="form-group">
                        <label for="RentalCost">RentalCost</label>
                        <input type="text" name="RentalCost" value="<%=transactions.RentalCost%>" placeholder="0">
                    </div>
                    <div class="form-group">
                        <label for="Type">Type</label>
                        <input type="text" name="Type" value="<%=transactions.Type%>" placeholder="Clean">
                    </div>
                    <div class="form-group">
                        <label for="Bradn">Bradn</label>
                        <input type="text" name="Bradn" value="<%=transactions.Bradn%>" placeholder="Clean">
                    </div>
            
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>
        </div>
    </main>

<%-include('include/_footer')%>