<%-include('include/_header')%>

    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/worktypes"><i class="fas fa-angle-double-left"></i> All Discounts</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Discount</h2>
                <span class="text-light">Use the below to update an discount</span>
            </div>

            <form method="POST" id="update_worktype">
                <div class="new-worktype">
                    <div class="form-group">
                        <label for="AmountDiscount">AmountDiscount</label>
                        <input type="hidden" name="id" value="<%=worktypes._id%>">
                        <input type="text" name="AmountDiscount" value="<%=worktypes.AmountDiscount%>" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" name="Name" value="<%=worktypes.Name%>" placeholder="">
                    </div>
            
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>
        </div>
    </main>

<%-include('include/_footer')%>